{
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines",
      "stylelint-prettier/recommended"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "prettier/prettier": true,
      "max-nesting-depth": 3,
      "selector-max-id": 0,
      "selector-max-compound-selectors": 3
    },
    "ignoreFiles": [
      "node_modules/**/*",
      "build/**/*",
      "public/**/*"
    ]
  }
  